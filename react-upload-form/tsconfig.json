{
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": ["DOM", "ES2021"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"paths": {
			"@components/*": ["components/*"],
			"@store/*": ["store/*"],
			"@utils/*": ["utils/*"],
			"@scss/*": ["assets/scss/*"],
			"@img/*": ["assets/img/*"],
			"@typings": ["typings.ts"]
		}
	},
	"include": ["src"]
}
